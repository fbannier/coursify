<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coursify"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.coursify.view.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.coursify.view.LoginActivity"
            android:label="@string/app_name" >
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.coursify.LectureListActivity"
            android:label="@string/title_activity_lecture_list" >
        </activity>
        <activity
            android:name="com.example.coursify.view.MainMenuFragment"
            android:label="@string/title_activity_main_menu" >
        </activity>
        <activity
            android:name="com.example.coursify.view.MyLecturesFragment"
            android:label="@string/title_activity_my_lectures" >
        </activity>
        <activity
            android:name="com.example.coursify.view.LectureFragment"
            android:label="@string/title_activity_lecture_fragment" >
        </activity>
        <activity
            android:name="com.example.coursify.LecturesFragment"
            android:label="@string/title_activity_lectures_fragment" >
        </activity>
    </application>

</manifest>
